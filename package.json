{
  "name": "voxtulate-client",
  "version": "1.2.0",
  "description": "Voxtulate Client",
  "author": "robertpakalns",
  "main": "index.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win --publish never",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertpakalns/VoxtulateClient.git"
  },
  "license": "ISC",
  "dependencies": {
    "discord-rich-presence": "^0.0.8",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.3.4"
  },
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^25.1.8"
  },
  "protocols": {
    "name": "Voxtulate",
    "schemes": [
      "voxtulate"
    ]
  },
  "build": {
    "appId": "voxtulate.client",
    "productName": "Voxtulate Client",
    "artifactName": "${productName}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "robertpakalns",
        "repo": "VoxtulateClient"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "uninstallDisplayName": "${productName}",
      "shortcutName": "${productName}"
    }
  }
}